{% block body %}
    <div class="app-content content">
        <div class="content-wrapper">

            <div class="content-body"><!-- Chart -->
                <div class="col">
                    <div class="card" >

                        <div class="card-header">
                            <h4 class="card-title" id="basic-layout-icons">Modifier Subscription</h4>
                            <a class="heading-elements-toggle">
                                <i class="la la-ellipsis-v font-medium-3"></i>
                            </a>
                            <div class="heading-elements">
                                <ul class="list-inline mb-0">
                                    <li>
                                        <a data-action="collapse">
                                            <i class="ft-minus"></i>
                                        </a>
                                    </li>
                                    <li>
                                        <a data-action="reload">
                                            <i class="ft-rotate-cw"></i>
                                        </a>
                                    </li>
                                    <li>
                                        <a data-action="expand">
                                            <i class="ft-maximize"></i>
                                        </a>
                                    </li>
                                    <li>
                                        <a data-action="close">
                                            <i class="ft-x"></i>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="card-content collapse show">
                            <form method="POST">
                                <div class="card-body">
                                    <div class="form-body">
                                        <div class="row">
                                            <div class="col-md-6">

                                                <div class="form-group">
                                                    <div class="form-control-position">

                                                    </div>
                                                    <label for="timesheetinput1"><i class="ft-user"></i>  Subscription</label>
                                                    <div class="position-relative has-icon-left">
                                                        <input type="text"  class="form-control" placeholder="Name" name="name" value="{{ sub.name }}">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="timesheetinput2"><i class="la la-briefcase"></i>  Tarif </label>
                                                    <div class="position-relative has-icon-left">
                                                        <select id="subscriptionbundle_subscription_tarif" name="tarif" class="form-control">
                                                            {% for i in tarif %}
                                                                <option {% if i.id == sub.tarif.id %} selected {% endif %} value="{{ i.id }}">{{ i.name }}</option>
                                                            {% endfor %}
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>





                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="timesheetinput5"> <i class="ft-clock"></i> Date</label>
                                                    <div class="position-relative has-icon-left">
                                                        <input type="date" class="form-control" placeholder="Date"  name="date" value="{{ sub.date | date('Y-m-d') }}">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="timesheetinput6"><i class="ft-clock"></i>  Active </label>
                                                    <div class="position-relative has-icon-left">
                                                        <input type="number" class="form-control" placeholder=" Active" name="active" value="{{ sub.active }}">
                                                    </div>
                                                </div>
                                            </div>

                                        </div>


                                    </div>

                                    <div class="form-actions right">
                                        <a href="{{ path('readsub') }}">
                                            <button type="button" class="btn btn-danger round btn-min-width ">
                                                <i class="ft-x"></i> Annuler
                                            </button>
                                        </a>
                                        <input type="submit" class="btn btn-bg-gradient-x-blue-green round  pull-right" value="Update">
                                    </div>


                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}