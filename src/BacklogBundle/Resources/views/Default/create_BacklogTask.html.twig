


{% extends 'backend.html.twig' %}


{% block body %}


    <div class="app-content content align-content-center align-self-center ">
        <div class="content-wrapper align-self-center ">
            <div class="content-header row">
            </div>
            <div class="content-body align-self-center"><!-- Chart -->
                <div class="col-12">    </div>
                <div class="col-12">    </div>
                <div class="col-12">    </div>
                <div class="col-12">    </div>
                <p>


                </p>

                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Ajouter une Tache </h4>
                        <a class="heading-elements-toggle">
                            <i class="fa fa-ellipsis-v font-medium-3"></i>
                        </a>
                        <div class="heading-elements">
                            <ul class="list-inline mb-0">
                                <li>
                                    <a class="btn btn-sm btn-success box-shadow-2 round btn-min-width pull-right" href="{{ path('index_ProjectBacklog') }}" >Retour</a>
                                </li>
                            </ul>
                        </div>
                    </div>

                </div>



                <!-- PUT BODY HERE -->
                <div class="content-body text-center align-self-center">
                    <div class="row match-height align-items-center align-self-center">
                        <div class="col-6  ">
                            <div class="card">
                                <div class="card-header">
                                    <h4 class="card-title"> Tache</h4>
                                </div>
                                <div class="card-block">
                                    <div class="card-body">

                                        <div class="form-body">
                                            {{ form_start(form) }}


                                                <label for="donationinput7" class="sr-only">Project</label>


                                                    <div class="form-group">
                                                        <h5 class="mt-2">Titre</h5>
                                                        <div class="position-relative has-icon-left">
                                                            {{ form_widget(form.title, { 'attr' : { 'class' : 'form-control' } }) }}

                                                        </div>
                                                    </div>

                                                <h5 class="mt-2">Description Fonctionnele </h5>
                                                <div class="form-group">

                                                    <textarea class="form-control" id="placeTextarea" rows="3" placeholder="Votre description Fonctionnele de la tache"
                                                             {{ form_widget(form.descriptionFonctionnel, { 'attr' : { 'class' : 'form-control' } }) }}
                                                    </textarea>
                                                </div>

                                                <h5 class="mt-2">Description Technique </h5>
                                                <div class="form-group">
                                                    <textarea class="form-control" id="placeTextarea" rows="3" placeholder="Votre description Technique de la tache"
                                                             {{ form_widget(form.descriptionTechnique, { 'attr' : { 'class' : 'form-control' } }) }}
                                                    </textarea>
                                                </div>

                                                <div class="card-header">
                                                    <h4 class="card-title">State</h4>
                                                </div>
                                                <div class="form-group">
                                                    {{ form_widget(form.state,{ 'attr' : { 'class' : 'form-control rounded' }}) }}
                                                </div>

                                                <div class="card-header">
                                                    <h4 class="card-title">Priority</h4>
                                                </div>
                                                <div class="form-group">
                                                    <input type="number" class="form-control"    {{ form_widget(form.priority) }}
                                                </div>

                                                <div class="card-header">
                                                    <h4 class="card-title">Story Points</h4>
                                                </div>
                                                <div class="form-group">
                                                    <input type="number" class="form-control"    {{ form_widget(form.storyPoints) }}
                                                </div>


                                                <div class="card-header">
                                                    <h4 class="card-title">Affecter un User</h4>
                                                </div>
                                                <div class="form-group">
                                                    {{ form_widget(form.user,{ 'attr' : { 'class' : 'form-control rounded' }}) }}
                                                </div>

                                                <div class="card-header">
                                                    <h4 class="card-title">Affecter a un Sprint</h4>
                                                </div>
                                                <div class="form-group">
                                                    {{ form_widget(form.sprint,{ 'attr' : { 'class' : 'form-control rounded' }}) }}
                                                </div>

                                                <div class="card-header">
                                                    <h4 class="card-title"> <i class="ft-clock"></i>End Date</h4>
                                                </div>

                                                <div class="form-group">
                                                    {{ form_label(form.finishedDate, 'Choisir la date estimer du fin de la tache') }}
                                                    {{ form_widget(form.finishedDate,  { 'attr' : { 'class' : 'form-control date-inputmask' }}) }}
                                                </div>
                                        </div>



                                        <div class="form-actions center">
                                            <button class="btn btn-primary" {{ form_widget(form.valider) }}  </button>
                                        </div>



                                        {{ form_end(form) }}

                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
        </div>
        <!--/ END BODY -->

        </div>

        <script type="text/javascript">
            $(function () {
                $('#datetimepicker1').datetimepicker();
            });
        </script>

    </div>

{%endblock%}

