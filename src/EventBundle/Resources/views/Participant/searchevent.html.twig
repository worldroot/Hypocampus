        <div class="content-wrapper">
            <div class="content-header row">
            </div>

            <!-- PUT BODY HERE -->
            <div class="content-body">
                <div class="row match-height">

                    <div class="card">
                        <div class="card-content">
                            <div class="card-header"><h3>Recherche Participant</h3>

                                <div class="heading-elements" >
                                    <ul class="list-inline mb-0">
                                        <li>
                                            <a data-action="reload" >
                                                <i class="ft-rotate-cw" ></i>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div id="product-summary" class="media-list position-relative">
                                <div class="table-responsive">

                                    <table class="table table-padded table-xl mb-0" id="product-summary-table">
                                        <thead>
                                        <tr>
                                            <th class="border-top-0">Nom</th>
                                            <th class="border-top-0">Prenom</th>
                                            <th class="border-top-0">Email</th>
                                            <th class="border-top-0">Password</th>
                                            <th class="border-top-0">Choix</th>
                                            <th ></th>
                                            <th ></th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for i in formations %}
                                            <tr>
                                                <td class="text-truncate">{{ i.nomp }}</td>
                                                <td class="text-truncate">{{ i.prenomp }}</td>
                                                <td class="text-truncate">{{ i.email }}</td>
                                                <td class="text-truncate">{{ i.passwordp }}</td>
                                                <td class="text-truncate">{{ i.choix.TypeEvent }}</td>
                                                <td class="text-truncat mr-1">
