{% block body %}
    <div class="app-content content">
        <div class="content-wrapper">
            <div class="content-header row">
            </div>

            <!-- PUT BODY HERE -->
            <div class="card-header">
                <div class="col-12"><h4 class="card-title">List des events </h4></div>
            </div>
            <div class="content-body">
                <div class="row match-height">
                    <section id="decks">
                        <div class="row">
                            <div class="card-deck">
                                {% for i in formations %}
                                    <div class="col-6">
                                        <div class="pull-up">
                                            <div class="card">
                                                <div class="card-body">
                                                    <h5 class="text-bold-600 mt-1"> <span class="blue-grey">{{ i.titreEvent }}</span></h5>
                                                    <a href="{{path('deleteevents',{'idev':i.idev})}}"><span class="badge badge-pill badge-danger float-right badge-glow"><i class="ft-x"></i></span></a>
