    {% endblock %}

    {% block body %}
        <div class="app-content content">
            <div class="content-wrapper">
                <div class="content-header row">
                </div>

                <!-- PUT BODY HERE -->
                <div class="content-body">
                    <div class="row match-height">
                        <div class="col-xl-4 col-lg-6 col-md-12">
                            <div class="card">
                                <div class="card-header">
                                    <div class="font-large-1">
                                        Ajout Event
                                    </div>
                                </div>
                                <div class="card-block">
                                    <div class="card-body">

                                        <div class="form-body">
                                            {{ form_start(form,{'attr': {'novalidate': 'novalidate','id':'events'} }) }}
                                            <div class="form-group">
                                                <h5>Titre</h5>
                                                <label for="donationinput1" class="sr-only"></label>
                                                <input type="text"  class="form-control" placeholder=""  {{ form_widget(form.titreEvent,{'attr':{'type':'text','id':'Titre'}}) }}
                                            </div>
                                            <div class="form-group">
                                                <h5>Capacit√©</h5>
                                                <label for="donationinput2" class="sr-only"></label>
                                                <input type="number"  class="form-control" placeholder=""  {{ form_widget(form.numeroEvent,{'attr':{'type':'number','id':'cap'}}) }}
                                            </div>
                                            <div class="form-group">
                                                <h5>Type</h5>
                                                <label for="donationinput7" class="sr-only">Type d'event</label>
                                                <input  class="form-control" placeholder=""  {{ form_widget(form.typeEvent,{'attr':{'type':'text','id':'Type'}}) }}
                                            </div>

                                            <div class="form-group">
                                                <h5>Date debut d'event</h5>
                                                <label for="donationinput7" class="sr-only">Date d'event</label>
                                                {{ form_widget(form.dateEvent, { 'attr' : { 'class' : 'form-control date-inputmask' } }) }}
                                            </div>

                                            <div class="form-group">
                                                <h5>Date fin d'event</h5>
                                                <label for="donationinput7" class="sr-only">Date d'event</label>
                                                {{ form_widget(form.enddateEvent, { 'attr' : { 'class' : 'form-control date-inputmask' } }) }}
                                            </div>
                                            <div class="form-group">
                                                <h5>Fichier</h5>
                                                <div class="custom-file">


                                                    {{ form_widget(form.imageFile, { 'attr' : { 'class' : 'custom-file-input','id' : 'fichier' } }) }}

                                                    <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
                                                    {{ form_label(form.imageFile    , 'Ajouter votre fichier') }}

                                                </div>
                                            </div>


                                        </div>
                                        <div class="form-actions center">
                                            <button class="btn btn-info" {{ form_widget(form.valider) }}  </button>
                                        </div>

                                        {{ form_end(form) }}

                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>



            </div>
        </div>
        <!--/ END BODY -->
    {% endblock %}

                    {% block js %}
                     <script type="text/javascript">
                        $("#events").submit(function(e){

                            if ( $("#Titre").val()==""){
                                $("#errorTitre").show();
                                e.preventDefault();}
                            else
                            {$("#errorTitre").hide();}
                    /*** ***/
                            if ( $("#Type").val()==""){
                                $("#errorType").show();
                                e.preventDefault();}
                            else
                            {$("#errorType").hide();}

                            if ( $("#fichier").val()==""){
                                $("#errorFichier").show();
                                e.preventDefault();
                            }
                            else
                            {$("#errorFichier").hide();}

                        });
                    </script>
                {% endblock %}

