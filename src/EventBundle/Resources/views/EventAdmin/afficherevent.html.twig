        <div class="content-wrapper">
            <div class="content-header row">
            </div>

            <!-- PUT BODY HERE -->
            <div class="content-body">
                <div class="row match-height">

                    <div class="card">
                        <div class="card-content">
                            <div class="card-header"><h3>List d'evenements</h3></div>
                            <div id="product-summary" class="media-list position-relative">
                                <div class="table-responsive">
                                    <table class="table table-padded table-xl mb-0" id="product-summary-table">
                                        <thead>
                                        <tr>

                                            <th class="border-top-0">Titre</th>
                                            <th class="border-top-0">Numero</th>
                                            <th class="border-top-0">Type</th>
                                            <th ></th>
                                            <th ></th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for i in tabs %}
                                            <tr>

                                                <td class="text-truncate">{{ i.titreEvent }}</td>
                                                <td class="text-truncate">{{ i.numeroEvent }}</td>
                                                <td class="text-truncate">{{ i.typeEvent }}</td>
                                                <td class="text-truncat mr-1">
                                                    <a href="{{path('deleteevents',{'idev':i.idev})}}">
