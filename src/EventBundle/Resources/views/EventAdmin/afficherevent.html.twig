        <div class="content-wrapper">
            <div class="content-header row">
            </div>

            <!-- PUT BODY HERE -->
            <div class="card-header">
                <div class="col-12"><h4 class="card-title">List des events </h4></div>
            </div>
            <div class="content-body">
                <div class="row match-height">
                <section id="decks">
                    <div class="row">
                                <div class="card-deck">
                                {% for i in tabs %}
                                    <div class="col-4">
                                    <div class="pull-up">
                                        <div class="card">
                                            <div class="card-body">
                                                <h5 class="text-bold-600 mt-1"> <span class="blue-grey">{{ i.titreEvent }}</span></h5>
                                                    <a href="{{path('deleteevents',{'idev':i.idev})}}"><span class="btn btn-outline-danger btn-min-width box-shadow-2 mr-1 "><i class="ft-x"></i></span></a>
