{% extends 'backend.html.twig' %}

{% block sidenavbar %}
    <div class="main-menu menu-fixed menu-light menu-accordion    menu-shadow " data-scroll-to-active="true" data-img="theme-assets/images/backgrounds/02.jpg">
        <div class="navbar-header">
            <ul class="nav navbar-nav flex-row">
                <li class="nav-item mr-auto"><a class="navbar-brand" href="index.html"><img class="brand-logo" alt="Chameleon admin logo" src="{{ asset('theme-assets/images/logo/hypocampus.png') }}"/>
                        <h3 class="brand-text">Hypocampus</h3></a></li>
                <li class="nav-item d-md-none"><a class="nav-link close-navbar"><i class="ft-x"></i></a></li>
            </ul>
        </div>
        <div class="main-menu-content">
            <ul class="navigation navigation-main" id="main-menu-navigation" data-menu="menu-navigation">
            </ul>
        </div>
    </div>
{% endblock %}

{% block body %}
    <div class="app-content content">
        <div class="content-wrapper">
            <div class="content-header row">
            </div>

            <!-- PUT BODY HERE -->
            <div class="card-header">
                <div class="col-12"><h4 class="card-title">List des events </h4></div>
            </div>
            <div class="content-body">
                <div class="row match-height">
                    <section id="decks">
                        <div class="row">
                            <div class="card-deck">
                                {% if formations.titreEvent is defined %}
                                    <div class="col-12">
                                        <div class="pull-up">
                                            <div class="card">
                                                <div class="card-body">
                                                    <div class="col-12">
                                                    <h5 class="text-bold-600 mt-1"> <span class="blue-grey">{{ formations.titreEvent }}</span></h5>
                                                    <br>
                                                    <h6 class="text-bold-600 mt-1"> Type: <span class="blue-grey">{{ formations.TypeEvent }}</span></h6>
                                                    <h6 class="text-bold-600 mt-1"> Numero: <span class="blue-grey">{{ formations.numeroEvent }}</span></h6>
                                                    <h6 class="text-bold-600 mt-1"> Date: <span class="blue-grey">{{ formations.dateEvent }}</span></h6>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {% else %}
                                    {% for i in formations %}
                                        <div class="col-12">
                                            <div class="pull-up">
                                                <div class="card">
                                                    <div class="card-body">
                                                        <div class="col-12">
                                                        <h5 class="text-bold-600 mt-1"> <span class="blue-grey">{{ i.titreEvent }}</span></h5>
                                                        <br>
                                                        <h6 class="text-bold-600 mt-1"> Type: <span class="blue-grey">{{ i.TypeEvent }}</span></h6>
                                                        <h6 class="text-bold-600 mt-1"> Numero: <span class="blue-grey">{{ i.numeroEvent }}</span></h6>
                                                        <h6 class="text-bold-600 mt-1"> Date: <span class="blue-grey">{{ i.dateEvent }}</span></h6>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                {% endif %}
                            </div>
                        </div>
                    </section>
                </div>




            </div>

        </div>
    </div>
    </div>


    </div>
    </div>





    <!--/ END BODY -->
    </div>
    </div>





{% endblock %}


