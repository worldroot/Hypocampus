{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}


<div class="col-lg-12">
    <section class="panel">
        <header class="panel-heading">
            <div class="panel-actions">
                <a href="#" class="fa fa-caret-down"></a>
                <a href="#" class="fa fa-times"></a>
            </div>

            <h2 class="panel-title"> </h2>
        </header>
        <div class="panel-body">
            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
            {{ form_errors(form) }}
            <div class="form-group">
                <div class="panel-body">
                    <div class="widget-summary">
                        <div class="widget-summary-col widget-summary-col-icon">
                            <div class="summary-icon bg-quartenary">
                                <i class="fa fa-user"></i>
                            </div>
                        </div>
                        <div class="widget-summary-col">
                            <div class="summary">
                                <h4 class="title"></h4>
                                <div class="info">
                                </div>
                            </div>
                            <div class="summary-footer">
                            </div>
                        </div>
                    </div>
                </div>


                <div class="col-md-6">
                </div>
            </div>
            <fieldset class="form-group position-relative has-icon-left">
                {{ form_widget(form.email, { 'attr' : { 'placeholder' : 'Email', 'class' : 'form-control round' }}) }}
                <div class="form-control-position">
                    <!-- <i class="ft-user"></i> -->
                </div>
            </fieldset>
            <div class="form-group">
            </div>




            <fieldset class="form-group position-relative has-icon-left">
                {{ form_widget(form.username, { 'attr' : { 'placeholder' : 'username', 'class' : 'form-control round' }}) }}
                <div class="form-control-position">
                    <!-- <i class="ft-user"></i> -->
                </div>
            </fieldset>
            <div class="form-group">
            </div>





            <fieldset class="form-group position-relative has-icon-left">
                {{ form_widget(form.plainPassword.first, { 'attr' : { 'placeholder' : 'Mot de passe', 'class' : 'validate form-control round' } }) }}
                <div class="form-control-position">
                    <!-- <i class="ft-user"></i> -->
                </div>
            </fieldset>

            <div class="form-group formField">
            </div>




            <fieldset class="form-group position-relative has-icon-left">
                {{ form_widget(form.plainPassword.second, { 'attr' : { 'data-error' : form_errors(form.plainPassword.second),'placeholder' : 'Repetez le mot de passe', 'class' : 'validate form-control round' } }) }}
                <div class="form-control-position">
                   <!-- <i class="ft-user"></i> -->
                </div>
            </fieldset>

            <div class="form-group formField">
            </div>





            <div class="form-group ">
            </div>

            <a href="{{ path('fos_user_registration_register') }}">
                <button type="submit" id="_submit" name="_submit" class="btn round btn-block btn-glow btn-bg-gradient-x-purple-blue col-12 mr-1 mb-1">Signup</button>
            </a>
            {{ form_end(form) }}
        </div>
    </section>
</div>


{{ form_end(form) }}
