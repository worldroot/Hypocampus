{% for i in projets %}


    <div class="col-xl-4 col-lg-6 col-md-12">
        <div class="card pull-up">
            <div class="card-header">

                <a href="{{ path('deleteprojet',{'id':i.id}) }}"><span class="badge badge-pill badge-danger float-right badge-glow"><i class="ft-x"></i></span></a>
                <a href="{{ path('updateprojet',{'id':i.id}) }}"><span class="badge badge-primary badge-pill badge-glow float-right"><i class="ft-edit-2"></i></span></a>
                <h4 class="card-title float-left ">{{ i.projetName }} :      </h4><a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>

                <span class="badge badge-pill badge-info float-left  ">In Progress</span>

            </div>
            <div class="card-content collapse show">
                <div class="card-body pt-0 pb-1">
                    <h6 class="text-muted font-small-3"> Completed Task : 4/10</h6>
                    <div class="progress progress-sm mt-1 mb-0 box-shadow-2">
                        <div class="progress-bar bg-gradient-x-info" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>

                    <div class="media d-flex">
                        <div class="align-self-center">
                            <h6 class="text-bold-600 mt-2"> Client: <span class="info">{{ i.owner }}</span></h6>
                            <h6 class="text-bold-600 mt-1"> startDate: <span class="blue-grey">{{ i.startDate |date }}</span></h6>
                            <h6 class="text-bold-600 mt-1"> Deadline: <span class="blue-grey">{{ i.endDate |date }}</span></h6>
                            <h6 class="text-bold-600 mt-1"> Description: <span class="blue-grey">{{ i.description  }}</span></h6>

                        </div>

                    </div>
                </div>

            </div>

        </div>

    </div>



{% endfor %}